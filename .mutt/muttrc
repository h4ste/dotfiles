# IMAP configuration
set imap_user=trg1988
set folder=imaps://trg1988@imap.gmail.com
set spoolfile=+INBOX
mailboxes =+INBOX =+HLT

# store message headers locally to speed things up
# if hcache is a folder, Mutt will create sub cache folders for each account
# which may speeds things even more up
set header_cache = "/tmp/mutt"

# store messages locally to speed things up, like searching message bodies 
# can be the same folder as header_cache
set message_cachedir = "/tmp/mutt"

# specify where to save and/or look for postponed messages
set postponed = +[Gmail]/Drafts

# allow Mutt to open new imap connection automatically
unset imap_passive

# keep imap connection alive by polling intermittently (time in seconds)
set imap_keepalive = 300

# how often to check for new mail (time in seconds)
set mail_check = 120

# set location of mailcap
set mailcap_path = ~/.mutt/mailcap

# automatically open HTML messages (via elinks)
auto_view text/html

# prefer plain text to html if possible
alternative_order text/plain text/html

# load solarized-mutt colorscheme
source ~/.mutt/mutt-colors-solarized-dark-16.muttrc
